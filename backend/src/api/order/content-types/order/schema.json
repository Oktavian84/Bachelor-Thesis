{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "orderId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "paypalOrderId": {
      "type": "string",
      "required": false,
      "unique": true
    },
    "orderStatus": {
      "type": "enumeration",
      "required": true,
      "default": "pending",
      "enum": [
        "pending",
        "completed",
        "cancelled",
        "failed"
      ]
    },
    "totalAmount": {
      "type": "integer",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "SEK",
      "required": true
    },
    "customerName": {
      "type": "string",
      "required": true
    },
    "customerEmail": {
      "type": "string",
      "required": true
    },
    "shippingAdress": {
      "type": "component",
      "repeatable": false,
      "component": "elements.shipping-address",
      "required": true
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "component": "elements.order-item",
      "required": true
    },
    "paymentDetails": {
      "type": "component",
      "repeatable": false,
      "component": "elements.payment-details"
    }
  }
}
